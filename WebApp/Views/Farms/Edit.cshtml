@model FarmCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Farm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Farm.Name" class="control-label"></label>
                <input asp-for="Farm.Name" class="form-control" />
                <span asp-validation-for="Farm.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Farm.Location" class="control-label"></label>
                <input asp-for="Farm.Location" class="form-control" />
                <span asp-validation-for="Farm.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Farm.FarmerId" class="control-label"></label>
                <select asp-for="Farm.FarmerId" class="form-control" asp-items="Model.FarmerSelectList"></select>
                <span asp-validation-for="Farm.FarmerId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Farm.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
