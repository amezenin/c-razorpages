@model SolutionCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Solution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Solution.Name" class="control-label"></label>
                <input asp-for="Solution.Name" class="form-control" />
                <span asp-validation-for="Solution.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.SolutionValue" class="control-label"></label>
                <input asp-for="Solution.SolutionValue" class="form-control" />
                <span asp-validation-for="Solution.SolutionValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.SolutionText" class="control-label"></label>
                <input asp-for="Solution.SolutionText" class="form-control" />
                <span asp-validation-for="Solution.SolutionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.QuestionId" class="control-label"></label>
                <select asp-for="Solution.QuestionId" class ="form-control" asp-items="Model.QuestionSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
