@model AnswerCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Answer.AnswerValueFirst" class="control-label"></label>
                <input asp-for="Answer.AnswerValueFirst" class="form-control" />
                <span asp-validation-for="Answer.AnswerValueFirst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer.AnswerValueSecond" class="control-label"></label>
                <input asp-for="Answer.AnswerValueSecond" class="form-control" />
                <span asp-validation-for="Answer.AnswerValueSecond" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer.AnswerValueThird" class="control-label"></label>
                <input asp-for="Answer.AnswerValueThird" class="form-control" />
                <span asp-validation-for="Answer.AnswerValueThird" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer.QuestionId" class="control-label"></label>
                <select asp-for="Answer.QuestionId" class="form-control" asp-items="Model.QuestionSelectList"></select>
                <span asp-validation-for="Answer.QuestionId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Answer.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
