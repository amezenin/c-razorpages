@model IEnumerable<BLL.App.DTO.FishTypeDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxDensity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TankCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinTemp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxTemp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxNh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxDensity)
            </td>   
            <td>
                @Html.DisplayFor(modelItem => item.TankCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
